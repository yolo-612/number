{
  "include": ["./src", "./types"],
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2015",
    "removeComments": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "resolveJsonModule": false,
    "declaration": true,
    "skipLibCheck": true,
    
    "typeRoots": [
      "./typings",
      "./types",
      "./node_modules/@types"
    ],
    "baseUrl": "./src",
    "rootDir": "./src",
    "outDir": "dist"
  },
  "compileOnSave": false
}